<div class='field-container'>
  <label for='{{id}}' {{#if hideLabel}}style='display:none;'{{/if}}>{{label}}</label>
  {{#if textarea }}
    <textarea name='{{name}}' id='{{id}}' placeholder='{{placeholder}}' {{#if required}}required{{/if}}></textarea>
  {{else}}
    <input type='{{type}}' name='{{name}}' id='{{id}}' placeholder='{{placeholder}}' {{#if required}}required{{/if}}/>
  {{/if}}
</div>