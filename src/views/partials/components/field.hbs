<div class='field-container'>
  <label for='{{id}}' {{#if hideLabel}}style='display:none;'{{/if}}>{{label}}</label>
  {{#if textarea }}
    <textarea name='{{name}}' id='{{id}}' placeholder='{{placeholder}}' required="{{required}}"></textarea>
  {{else}}
    <input type='{{type}}' name='{{name}}' id='{{id}}' placeholder='{{placeholder}}' required="{{required}}"/>
  {{/if}}
</div>